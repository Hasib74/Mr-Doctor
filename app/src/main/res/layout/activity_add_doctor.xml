<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".AddDoctorActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        layout="@layout/image_add_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </include>

    <android.support.v7.widget.CardView
    app:cardCornerRadius="20dp"
    app:cardElevation="5dp"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/addDoctorNameEditTextId"
        android:hint="Doctor Name"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:backgroundTint="@color/white"
        android:singleLine="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</android.support.v7.widget.CardView>
<android.support.v7.widget.CardView
    app:cardCornerRadius="20dp"
    app:cardElevation="5dp"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/addDoctorDetailsEditTextId"
        android:hint=" Details "
        android:textAllCaps="false"
        android:textAlignment="center"
        android:backgroundTint="@color/white"
        android:singleLine="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</android.support.v7.widget.CardView>
<android.support.v7.widget.CardView
    app:cardCornerRadius="30dp"
    app:cardElevation="5dp"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_marginLeft="20dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/showAppoinmetnTV_Id"
        android:layout_width="245dp"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight=".2"
        android:hint="Appoinment Date"
        android:singleLine="false"
        android:textAlignment="center"
        android:textAllCaps="false" />


    <ImageView
        android:id="@+id/doctorAppoinmentDatePickUpId"
        android:layout_width="50dp"
        android:layout_marginBottom="2dp"
        android:layout_height="50dp"
        android:src="@drawable/datepickup" />

</LinearLayout>

</android.support.v7.widget.CardView>
<android.support.v7.widget.CardView
    app:cardCornerRadius="20dp"
    app:cardElevation="5dp"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/addDoctorPhoneEditTextId"
        android:inputType="phone"
        android:hint="Phone"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:singleLine="false"
        android:backgroundTint="@color/white"

        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</android.support.v7.widget.CardView>
<android.support.v7.widget.CardView
    app:cardCornerRadius="20dp"
    app:cardElevation="5dp"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:inputType="textEmailAddress"
        android:id="@+id/addDoctorEmailEditTextId"
        android:hint="Email"
        android:textAllCaps="false"
        android:backgroundTint="@color/white"
        android:textAlignment="center"
        android:singleLine="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
    app:cardCornerRadius="20dp"
    app:cardElevation="5dp"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:background="@drawable/button_shap_design"
        android:text="Save"
        android:textAllCaps="false"
        android:id="@+id/saveButtonId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</android.support.v7.widget.CardView>


