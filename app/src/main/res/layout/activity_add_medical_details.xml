<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="20dp"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/main_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddMedicalDetailsActivity">

    <include
        android:layout_margin="5dp"
        layout="@layout/activity_add_medical_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </include>
    <android.support.v7.widget.CardView

        app:cardCornerRadius="20dp"
        app:cardElevation="5dp"

        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:textAlignment="center"
            android:id="@+id/addDoctorNameSpinnerId"
            android:layout_width="match_parent"
            android:layout_height="50dp">

        </Spinner>

  <!--      <EditText
            android:id="@+id/addMedicalNameEditTextId"
            android:hint="Medical Doctor Name"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:backgroundTint="@color/white"
            android:singleLine="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />-->

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp"
        android:layout_margin="5dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/addPrescriptionDetailsEditTextId"
            android:hint="Prescription Details "
            android:textAllCaps="false"
            android:textAlignment="center"
            android:backgroundTint="@color/white"
            android:singleLine="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        app:cardCornerRadius="30dp"
        app:cardElevation="5dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/showAddPrecriptionDate_Id"
                android:layout_width="245dp"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".2"
                android:hint="Prescription Date"
                android:singleLine="false"
                android:textAlignment="center"
                android:textAllCaps="false" />


            <ImageView
                android:id="@+id/doctorPrescriptionDatePickUpId"
                android:layout_width="50dp"
                android:layout_marginBottom="2dp"
                android:layout_height="50dp"
                android:src="@drawable/datepickup" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
<!--    <android.support.v7.widget.CardView
        app:cardCornerRadius="30dp"
        app:cardElevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/savePrescriptionButtonId"
            android:background="@drawable/button_shap_design"
            android:layout_margin="5dp"

            android:text="Save "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.v7.widget.CardView>-->

    <Button
        android:id="@+id/savePrescriptionButtonId"
        android:background="@drawable/button_shap_design"
        android:elevation="15dp"
        android:layout_margin="5dp"
        android:text="Save "
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />




</LinearLayout>